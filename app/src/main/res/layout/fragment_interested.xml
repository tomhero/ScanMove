<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.scanmove.activities.InterestedFragment">


    <!-- TODO: Update blank fragment layout -->


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/event_image_slider"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_tint"
        android:padding="16dp"
        android:shadowColor="@color/colorHilight"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="25"
        android:text="Highlight event"
        android:textColor="@color/colorHilight"
        android:textSize="22sp" />

    <ImageView
        android:layout_below="@id/event_image_slider"
        android:paddingLeft="16dp"
        android:id="@+id/interest_icon"
        android:paddingTop="16dp"
        app:srcCompat="@drawable/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/event_image_slider"
        android:layout_toRightOf="@id/interest_icon"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif-light"
        android:text="My Interested Event"
        android:textSize="26sp"
        android:padding="16dp"
        android:id="@+id/interest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <View
        android:id="@+id/interest_div"
        android:layout_below="@id/interest_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />

    <ListView
        android:layout_below="@id/interest_div"
        android:id="@+id/interest_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:dividerHeight="0dp"
        android:divider="@android:color/black"/>

</RelativeLayout>
